<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sx.daoyun.mapper.UserMapper">
    <!--///这里还可以使用缓存-->
    <!--使这个能辨别 要在yml中整合mybatis-->
    <select id="queryUserList" resultType="User">
      select *from user
    </select>
    <insert id="addUser" parameterType="User">
        insert into user (userAccount,sex,nickname,phone,academy,createtime,creater,password,schoolid)
        values (#{userAccount},#{sex},#{nickname},#{phone},#{academy},#{createtime},#{creater}
        ,#{password},#{schoolid}
        )
    </insert>
    <select id="queryUserById" resultType="User">
        select *from user where id=#{0}
    </select>
    <delete id="deleteUser" parameterType="int">
        delete from user where id=#{0}
    </delete>
    <update id="updateUser" parameterType="User">
        update user set userAccount=#{userAccount},sex=#{sex},nickname=#{nickname}
        ,phone=#{phone},academy=#{academy},updatetime=#{updatetime},password=#{password},
        updater=#{updater},schoolid=#{schoolid}
        where id=#{id}
    </update>
    <update id="resetPassword" parameterType="int">
        update user set password=123456 where id=#{id}
    </update>
</mapper>